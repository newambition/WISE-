      "related_biases": [
        {
          "name": "Authority Bias",
          "description": "The tendency to attribute greater accuracy to the opinion of an authority figure and be more influenced by that opinion. Appeal to authority tactics directly exploit this bias by emphasizing credentials or status over substance.",
          "citations": ["3.1"]
        },
        {
          "name": "Halo Effect",
          "description": "The tendency for positive impressions in one area to influence opinions in another unrelated area. Appeal to authority often leverages this by suggesting expertise or success in one domain transfers to credibility in unrelated domains.",
          "citations": ["3.2"]
        },
        {
          "name": "Cognitive Miserliness",
          "description": "The tendency to think and act quickly with minimal mental effort. Appeals to authority provide a cognitive shortcut by suggesting we can defer judgment to experts rather than evaluating complex evidence ourselves.",
          "citations": ["3.3"]
        },
        {
          "name": "Credentialism Bias",
          "description": "The tendency to overvalue formal credentials and undervalue practical experience or domain-specific knowledge. Appeal to authority often emphasizes impressive-sounding credentials even when they're not directly relevant to the specific claim.",
          "citations": ["3.4"]
        }
