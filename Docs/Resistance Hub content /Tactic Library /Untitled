  "related_biases": [
    {
      "name": "Halo Effect",
      "description": "The tendency for positive impressions in one area to influence opinion in another area. Affirmation creates positive feelings that can extend to unrelated aspects of a message or proposal, making critical evaluation less likely.",
      "citations": ["3.1"]
    },
    {
      "name": "Reciprocity Bias",
